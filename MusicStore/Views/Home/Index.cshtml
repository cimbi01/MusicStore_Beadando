@model IEnumerable<MusicStore.Models.Database.Movie.Movie>
@{
    //加载布局页面
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Index";
}

<div id="promotion">
</div>
<h2>Movie Store Home Page</h2>
<h3><em>Fresh</em>off the grill</h3>
<ul>
    @foreach (var movie in @Model)
    {
        <li>
            <a href="@Url.Action("Details", "Store", new { id=movie.MovieId})">
                <img alt="@movie.MovieTitle" src="@movie.MoviePosterUrl" />
                <span>@movie.MovieTitle</span>
            </a>
        </li>
    }
</ul>
