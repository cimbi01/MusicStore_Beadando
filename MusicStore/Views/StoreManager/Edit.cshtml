@model MusicStore.Models.Database.Movie.Movie

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Movie</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.MovieId)

        <div class="form-group">
            @Html.LabelFor(model => model.MovieGenreId, "MovieGenreId", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("MovieGenreId", String.Empty)
                @Html.ValidationMessageFor(model => model.MovieGenreId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MovieDirectorId, "MovieDirectorId", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("MovieDirectorId", String.Empty)
                @Html.ValidationMessageFor(model => model.MovieDirectorId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MovieTitle, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MovieTitle)
                @Html.ValidationMessageFor(model => model.MovieTitle)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MoviePrice, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MoviePrice)
                @Html.ValidationMessageFor(model => model.MoviePrice)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MoviePosterUrl, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MoviePosterUrl)
                @Html.ValidationMessageFor(model => model.MoviePosterUrl)
             </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
